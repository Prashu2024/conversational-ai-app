# --- Configuration ---
# Choose the default LLM provider: "GEMINI", "OPENAI", "ANTHROPIC"
LLM_PROVIDER="GEMINI"

# --- API Keys ---
# Obtain keys from the respective providers
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
ANTHROPIC_API_KEY="YOUR_ANTHROPIC_API_KEY"

# --- Optional Model Names (Defaults are usually fine) ---
# OPENAI_MODEL_NAME="gpt-4" # Or "gpt-3.5-turbo"
# ANTHROPIC_MODEL_NAME="claude-3-opus-20240229" # Or other Claude models
# GEMINI_MODEL_NAME="gemini-pro" # Or other Gemini models

# --- Server Configuration ---
MCP_SERVER_URL="http://127.0.0.1:8000" # URL where the FastAPI server runs
MCP_SERVER_PORT=8000 # Port for the FastAPI server